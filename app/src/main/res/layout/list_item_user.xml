<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:divider="@drawable/divider_margin_12"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/margin12"
    android:showDividers="middle">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/margin40"
        android:layout_height="@dimen/margin40"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.ShapeableImageView.Circle"
        tools:src="@color/grey" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/Github.TextAppearance.Regular.12"
        android:textColor="@color/soft_black"
        tools:text="User Name" />

    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        tools:ignore="ContentDescription" />

</LinearLayout>